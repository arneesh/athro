{
    "compilerOptions": {
      "module": "commonjs",
      "sourceMap": true,
      "allowSyntheticDefaultImports": true,
      "outDir": "dist",
      "strict": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "lib": [
        "esnext"
      ],
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "baseUrl": ".",
      "paths": {
        "*": [
          "node_modules/*",
          "src/types/*"
        ]
      },
      "typeRoots": ["./@types", "./node_modules/@types"],
      // "noUncheckedIndexedAccess": true,
      "noEmit": true
    }
  }